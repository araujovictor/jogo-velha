<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="varaujo.com.br.jogovelha.Jogadores"
    android:background="#ffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JOGADORES"
        android:id="@+id/lblJogadores"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 1"
        android:id="@+id/lblJogador1"
        android:tag="lblJogador1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/lblJogadores"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:textColor="#010101" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/txtJogador1"
        android:tag="txtJogador1"
        android:layout_below="@+id/lblJogador1"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:text="@string/lblPlayer1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador 2"
        android:id="@+id/lblJogador2"
        android:tag="lblJogador2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/txtJogador2"
        android:layout_alignParentStart="true"
        android:textColor="#010101" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/txtJogador2"
        android:tag="txtJogador2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:text="@string/lblPlayer2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/btnInicio"
        android:onClick="startMatch"
        android:text="INICIAR"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp" />

</RelativeLayout>
